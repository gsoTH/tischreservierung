{
  "openapi": "3.0.0",
  "info": {
    "title": "tischreservierung API",
    "description": "Ein Beispiel für die Entwicklung (und Dokumentation) einer API mit Flask.",
    "contact": {
      "name": "Git-Repository",
      "url": "https://github.com/gsoTH/tischreservierung"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/api/v1/anfragen": {
      "get": {
        "tags": [
          "Reservieren"
        ],
        "summary": "Verfügbare Tische zu bestimmten Zeitpunkt abfragen",
        "description": "Returns Liste alle verfügbaren Tische",
        "operationId": "anfragen",
        "parameters": [
          {
            "name": "zeitpunkt",
            "in": "query",
            "description": "Zeitpunkt, ab dem ein Tisch gewünscht ist.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Tisch"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Zeitangabe fehlt oder ist fehlerhaft"
          }
        }
      }
    },
    "/api/v1/reservieren": {
      "get": {
        "tags": [
          "Reservieren"
        ],
        "summary": "Tische zu bestimmten Zeitpunkt reservieren",
        "description": "Returns Reservierungsnummer und PIN",
        "operationId": "reservieren",
        "parameters": [
          {
            "name": "zeitpunkt",
            "in": "query",
            "description": "Zeitpunkt, ab dem ein Tisch gewünscht ist.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "tischnummer",
            "in": "query",
            "description": "Der gewünschte Tisch",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Reservierung erfolgreich",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Reservierung"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Zeitangabe oder Tischnummer fehlt oder ist fehlerhaft"
          }
        }
      }
    },
    "/api/v1/stornieren": {
      "post": {
        "tags": [
          "Stornieren"
        ],
        "summary": "Vorhandene Reservierungen stornieren",
        "requestBody": {
          "description": "Mindestens diese Elemente müssen vorhanden sein. Eine Reservierung ist ebenfalls gültig.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Stornierung"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Die Reservierung wurde storniert"
          },
          "400": {
            "description": "Reservierungsnummer und/oder PIN sind nicht korrekt"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Tisch": {
        "title": "tisch",
        "description": "Ein Tisch in unserem Ladenlokal.",
        "properties": {
          "nr": {
            "description": "Die Tischnummer",
            "type": "integer",
            "format": "int32"
          },
          "anzahlPlaetze": {
            "description": "Anzahl der Sitzplätze",
            "type": "integer",
            "format": "int32"
          }
        },
        "type": "object"
      },
      "Reservierung": {
        "title": "reservierung",
        "description": "Eine Reservierungsbestätigung",
        "properties": {
          "reservierungsnummer": {
            "description": "Die eindeutige Nummer der Reservierung",
            "type": "integer",
            "format": "int32"
          },
          "pin": {
            "description": "Pin für eine eventuelle Stornierung",
            "type": "integer",
            "format": "int32"
          },
          "storniert": {
            "description": "Zeigt an, ob die Reservierung storniert wurde",
            "type": "boolean",
            "default": false
          },
          "tischnummer": {
            "title": "tischnummer",
            "description": "Die Tischnummer",
            "type": "integer",
            "format": "int32"
          },
          "zeitpunkt": {
            "description": "Startzeit der Reservierung",
            "type": "string",
            "format": "date-time"
          }
        },
        "type": "object"
      },
      "Stornierung": {
        "title": "stornierung",
        "description": "Eine Zusammenfassung einer stornieren Reservierung",
        "properties": {
          "reservierungsnummer": {
            "title": "reservierungsnummer",
            "description": "Die eindeutige Nummer der Reservierung",
            "type": "integer",
            "format": "int32"
          },
          "pin": {
            "description": "Zugehöriger Pin",
            "type": "integer",
            "format": "int32"
          }
        },
        "type": "object"
      }
    }
  },
  "tags": [
    {
      "name": "Reservieren",
      "description": "Neue Reservierungen erzeugen"
    },
    {
      "name": "Stornieren",
      "description": "Vorhandene Reservierungen verändern"
    }
  ]
}